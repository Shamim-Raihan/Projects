<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.ui.MerchantRegisterActivity">


    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_monochrome_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Create Account"
            android:textColor="@color/themeColor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create a new account"
            android:textColor="#272727"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/name_input_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pharmacy Name"
        app:helperText="Required*"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#FF0000"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pharmacy_name_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="31"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/image_selector"
        >
        <TextView
            android:id="@+id/trade_licnece_photo_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Licence Image"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trade_licence_photo_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/trade_licnece_photo_tv_id"
            android:background="@drawable/image_selector_button"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:singleLine="true"
            android:text="Click here"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/trade_licence_error_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_error"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/image_selector"
        >

        <TextView
            android:id="@+id/pharmacist_licence_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacist Licence Image"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pharmacist_licence_photo_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/pharmacist_licence_id"
            android:background="@drawable/image_selector_button"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:singleLine="true"
            android:text="Click here"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/pharmacist_licence_error_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_error"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/phone_input_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter mobile"
        app:helperText="Required*"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#FF0000"
        app:prefixText="+88"
        app:prefixTextColor="@color/themeColor"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/email_input_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        app:helperText="Required*"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#FF0000"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="31"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/password_input_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        app:helperText="Required*"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="password_toggle"
        app:helperTextTextColor="#FF0000"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="21"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/confim_password_input_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm password"
        app:helperText="Required*"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="password_toggle"
        app:helperTextTextColor="#FF0000"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirmpassword_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="21"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password_check_alert_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password and Confirm password does not match"
        android:textSize="10sp"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/register_button_id"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/button_design"
        android:textColor="@color/textColorBlack"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#252525"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/navigate_to_log_in_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#0434BC"
            android:textSize="12sp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />
    </LinearLayout>

    </LinearLayout>
</ScrollView>